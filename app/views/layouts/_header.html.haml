%nav.navbar.navbar-default.navbar-fixed-top.grepolia-nav{:role => "navigation"}
  .container
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle{"data-target" => "#navbar-brand-centered", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      .navbar-brand.navbar-brand-centered 
        =link_to 'Grepolia', root_path

    / Collect the nav links, forms, and other content for toggling
    #navbar-brand-centered.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li
          =link_to players_path do
            %i.fa.fa-users
            Players
        %li
          =link_to alliances_path do
            %i.fa.fa-shield
            Alliances
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li
            =link_to activities_path do
              %i.fa.fa-dot-circle-o
              Activities 
          %li
            =link_to edit_user_registration_path do
              %i.fa.fa-sliders
              Settings
          %li
            =link_to destroy_user_session_path, method: :delete do
              %i.fa.fa-power-off 
              Log out
        - else
          %li
            =link_to new_user_session_path do
              %i.fa.fa-power-off
              Sign in

